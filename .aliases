alias bl="brew list"

alias gcl="git clone"
alias gpl="git pull"
alias gpsh="git push"
alias gcm="git commit -m"
alias grm="git remote"
alias gls="git ls-files"

alias nin="npm init"
alias nis="npm i -S"
alias nid="npm i -D"
alias nig="npm i -g"
alias nst="npm start"

alias gb="gulp build"
