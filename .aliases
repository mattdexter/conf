alias pfl=". ~/.profile"

alias c="clear"
alias l="ls -al"
alias m="mkdir -p"
alias t="touch"

alias v="vim"
alias sv="sudo vim"

alias 644="chmod 644"
alias 744="chmod 744"
alias 755="chmod 755"
alias 775="chmod 775"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias agi="sudo apt-get install"
alias agr="sudo apt-get remove"
alias acs="apt-cache search"
alias agu="sudo apt-get update && sudo apt-get upgrade && sudo apt-get dist-upgrade && sudo apt-get autoremove"

alias gin="git init"
alias ga="git add"
alias gcm="git commit -m"
alias grh="git reset HEAD~"
alias gpsh="git push"
alias gpll="git pull"
alias gcl="git clone"
alias gls="git ls-files"

alias py="python"
alias pym="python manage.py"

alias pir="pip install -r requirements.txt"
alias pin="pip install"
alias spi="sudo -H pip install"
alias pfr="pip freeze > requirements.txt"

alias doc="docker"
alias dps="docker ps"
alias dlog="docker logs"
alias dex="docker exec -it"
alias drn="docker run -it"
alias dnw="docker network"
alias dsw="docker swarm"
alias dsi="docker swarm init"
alias dsd="docker stack deploy -c ./docker-compose.yml"
alias dnws="docker network ls"
alias drmi="docker rmi $(docker images -a -q)"

alias dmc="docker-machine"
alias dms="docker-machine ls"

alias dco="docker-compose -f docker-compose.prod.yml"
alias dcr="docker-compose -f docker-compose.prod.yml restart"
alias dcrn="docker-compose -f docker-compose.prod.yml run"

alias dcb="docker-compose -f docker-compose.prod.yml build"
alias dcbr="docker-compose -f docker-compose.prod.yml build && docker-compose -f docker-compose.prod.yml restart"

alias dcu="docker-compose -f docker-compose.prod.yml up"
alias dcud="docker-compose -f docker-compose.prod.yml up -d"
alias dcur="docker-compose -f docker-compose.prod.yml up --remove-orphans"
alias dcudr="docker-compose -f docker-compose.prod.yml up -d --remove-orphans"

alias dcbu="docker-compose -f docker-compose.prod.yml build && docker-compose -f docker-compose.prod.yml up"
alias dcbud="docker-compose -f docker-compose.prod.yml build && docker-compose -f docker-compose.prod.yml up -d"
alias dcbur="docker-compose -f docker-compose.prod.yml build && docker-compose -f docker-compose.prod.yml up --remove-orphans"
alias dcbudr="docker-compose -f docker-compose.prod.yml build && docker-compose -f docker-compose.prod.yml up -d --remove-orphans"

alias dcd="docker-compose -f docker-compose.prod.yml down"
alias dcdb="docker-compose -f docker-compose.prod.yml down && docker-compose -f docker-compose.prod.yml build"
alias dcdbu="docker-compose -f docker-compose.prod.yml down && docker-compose -f docker-compose.prod.yml build && docker-compose up -f docker-compose.prod.yml"
alias dcdbud="docker-compose -f docker-compose.prod.yml down && docker-compose -f docker-compose.prod.yml build && docker-compose up -f docker-compose.prod.yml -d"
alias dcdbur="docker-compose -f docker-compose.prod.yml down && docker-compose -f docker-compose.prod.yml build && docker-compose up -f docker-compose.prod.yml --remove-orphans"
alias dcdbudr="docker-compose -f docker-compose.prod.yml down && docker-compose -f docker-compose.prod.yml build && docker-compose up -f docker-compose.prod.yml -d --remove-orphans"

alias ecrl="$(aws ecr get-login --no-include-email --region us-east-1)"

alias ecs="ecs-cli"
alias eps="ecs-cli ps"
alias eup="ecs-cli up"
alias edn="ecs-cli down"

alias eco="ecs-cli compose -f docker-compose.prod.yml"
alias ecu="ecs-cli compose -f docker-compose.prod.yml up"
alias ecd="ecs-cli compose -f docker-compose.prod.yml down"

alias esu="ecs-cli compose -f docker-compose.prod.yml service up"
alias esr="ecs-cli compose -f docker-compose.prod.yml service rm"

alias nin="npm init"
alias nis="npm i -S"
alias nid="npm i -D"
alias nig="npm i -g"

alias sys="sudo systemctl"
alias syr="sudo systemctl restart"
alias syrn="sudo systemctl restart nginx"
alias syrd="sudo systemctl restart docker"
alias sydr="sudo systemctl daemon-reload"